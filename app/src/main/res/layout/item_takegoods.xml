<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_320"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_25"
    android:layout_marginRight="@dimen/dp_25"
    android:paddingTop="@dimen/dp_15">

    <!--
   收货页的item
   -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/dp_20"
        android:paddingTop="@dimen/dp_15"
        android:background="@drawable/shape_item_showhot">

    <RelativeLayout
        android:layout_width="@dimen/dp_260"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginBottom="@dimen/dp_5">

        <TextView
            android:id="@+id/item_allOrder_text_ddh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号:"/>
        <TextView
            android:id="@+id/item_allOrder_text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="2020-20-20"/>
    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragmentallorders_rv_child"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_24">

        <TextView
            android:id="@+id/item_allOrder_text_pjgs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="2020-20-20"/>

        <TextView
            android:id="@+id/item_allOrder_text_kddh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/dp_20"
            android:text="2020-20-20"/>

        <Button
            android:id="@+id/item_allOrder_btn_zf"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_26"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_item_all_btn_zf"
            android:textSize="@dimen/sp_14"
            android:textColor="#fff"
            android:layout_alignParentBottom="true"
            android:text="确认收货"/>
    </RelativeLayout>
    </LinearLayout>

</LinearLayout>
