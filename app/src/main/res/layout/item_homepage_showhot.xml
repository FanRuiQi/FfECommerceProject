<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:paddingRight="@dimen/dp_10"
    android:layout_gravity="center"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:background="@drawable/shape_item_showhot"
        >
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/home_hot_simple"
            android:layout_width="@dimen/dp_85"
            android:layout_height="@dimen/dp_90" />

        <TextView
            android:id="@+id/home_hot_name"
            android:layout_width="wrap_content"
            android:maxEms="5"
            android:layout_height="@dimen/dp_20"
            android:layout_below="@id/home_hot_simple"
            android:textSize="@dimen/sp_12"
            android:textColor="#666666"
            android:layout_marginTop="@dimen/dp_10"
            android:singleLine="true"
            android:text="AAAA"/>
        <TextView
            android:id="@+id/home_hot_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_hot_name"
            android:textColor="#F00"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_10"
            android:text="ï¿¥0.0"/>
    </RelativeLayout>


</LinearLayout>
