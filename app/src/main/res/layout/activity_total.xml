<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.TotalActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/total_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/total_group"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:background="@mipmap/bg_homepage_bottom"
        android:layout_alignParentBottom="true"/>
    <RadioGroup
        android:id="@+id/total_group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_57"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        >
        <RadioButton
            android:id="@+id/tab_home_bottom_shouye"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26"
            android:button="@null"
            android:checked="true"
            android:layout_marginLeft="@dimen/dp_32"
            android:background="@drawable/home_selector"
            />
        <RadioButton
            android:id="@+id/tab_home_bottom_quanzi"
            android:layout_width="@dimen/dp_34"
            android:layout_height="@dimen/dp_34"
            android:button="@null"
            android:layout_marginLeft="@dimen/dp_32"
            android:background="@drawable/home_selector_qz"
            />
        <RadioButton
            android:id="@+id/tab_home_bottom_che"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:button="@null"
            android:layout_marginLeft="@dimen/dp_27"
            android:background="@mipmap/tab_home_bottom_gouwuche"
            />
        <RadioButton
            android:id="@+id/tab_home_bottom_dingdan"
            android:layout_width="@dimen/dp_34"
            android:layout_height="@dimen/dp_34"
            android:button="@null"
            android:layout_marginLeft="@dimen/dp_36"
            android:background="@drawable/home_selector_zhangdan"
            />
        <RadioButton
            android:id="@+id/tab_home_bottom_wode"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26"
            android:button="@null"
            android:layout_marginLeft="@dimen/dp_32"
            android:layout_marginRight="@dimen/dp_32"
            android:background="@drawable/home_selector_myn"
            />
    </RadioGroup>

</RelativeLayout>

