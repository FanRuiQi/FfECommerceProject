<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_102"
        android:background="@drawable/shape_item_showhot"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_24"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/indent_group"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            >

            <RadioButton
                android:id="@+id/i1"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:textSize="@dimen/sp_12"
                android:gravity="center"
                android:background="@mipmap/quanbudd_ddf"
                android:button="@null"
                android:layout_marginLeft="@dimen/dp_10"
                />
            <RadioButton
                android:id="@+id/i2"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:textSize="@dimen/sp_12"
                android:gravity="center"
                android:background="@mipmap/daifuk_ddf"
                android:button="@null"
                android:layout_marginLeft="@dimen/dp_15"/>
            <RadioButton
                android:id="@+id/i3"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:textSize="@dimen/sp_12"
                android:gravity="center"
                android:background="@mipmap/daishouh_ddf"
                android:button="@null"
                android:layout_marginLeft="@dimen/dp_20"/>
            <RadioButton
                android:id="@+id/i4"
                android:layout_width="@dimen/dp_40"

                android:layout_height="@dimen/dp_40"
                android:textSize="@dimen/sp_12"
                android:gravity="center"
                android:background="@mipmap/daipingj_ddf"
                android:button="@null"
                android:layout_marginLeft="@dimen/dp_20"/>
            <RadioButton
                android:id="@+id/i5"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:textSize="@dimen/sp_12"
                android:gravity="center"
                android:background="@mipmap/yiwanc_ddf"
                android:button="@null"
                android:layout_marginLeft="@dimen/dp_20"/>
        </RadioGroup>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:gravity="center"
                android:text="全部订单"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:gravity="center"
                android:text="代付款"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:gravity="center"
                android:text="待收货"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:gravity="center"
                android:text="待评价"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:gravity="center"
                android:text="已完成"/>
        </LinearLayout>
    </LinearLayout>



    <android.support.v4.view.ViewPager
        android:id="@+id/indent_viewpager"
        android:layout_width="@dimen/dp_312"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_30" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_100"
        android:background="#fff"

        >
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:gravity="center"
            android:src="@drawable/jian"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:gravity="center"
            android:src="@drawable/jian"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:gravity="center"
            android:src="@drawable/jian"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:gravity="center"
            android:src="@drawable/jian"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:gravity="center"
            android:src="@drawable/jian"/>
    </LinearLayout>
</LinearLayout>
