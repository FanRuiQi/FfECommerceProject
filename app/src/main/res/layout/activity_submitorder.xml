<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/submitOrder_rv"
        android:layout_width="match_parent"
        android:layout_weight="7"
        android:layout_marginTop="@dimen/dp_140"
        android:layout_height="wrap_content"/>


    <RelativeLayout
        android:background="#eeeeee"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <TextView
            android:id="@+id/submit_text_allmoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#F00"
            android:layout_toRightOf="@id/shoppingcar_checkbox_checkall"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_20"
            android:text="共 件商品"/>

        <Button
            android:id="@+id/submit_button_pay"
            android:layout_width="@dimen/dp_118"
            android:layout_height="match_parent"
            android:background="#ff5e70"
            android:layout_alignParentRight="true"
            android:textColor="#FFF"
            android:textSize="@dimen/sp_16"
            android:text="提交订单"/>

    </RelativeLayout>

</LinearLayout>
