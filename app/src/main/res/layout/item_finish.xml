<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_320"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_25"
    android:layout_marginRight="@dimen/dp_25"
    android:paddingTop="@dimen/dp_15">
    <!--
    评论页的item
    -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/dp_20"
        android:paddingTop="@dimen/dp_15"
        android:background="@drawable/shape_item_showhot">


        <RelativeLayout
            android:layout_width="@dimen/dp_260"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_marginBottom="@dimen/dp_5">

            <TextView
                android:id="@+id/item_allOrder_text_ddh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号:"/>
            <ImageView
                android:id="@+id/item_allOrder_img"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/sp_12"
                android:layout_alignParentRight="true"
                android:src="@mipmap/common_btn_more_n_xhdpi"/>
        </RelativeLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragmentallorders_rv_child"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/item_allOrder_text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_210"
            android:layout_marginTop="@dimen/dp_10"
            android:text="2020-20-20"/>

    </LinearLayout>

</LinearLayout>
