<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_item_showhot"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">


        <ImageView
            android:id="@+id/item_my_img"
            android:layout_width="@dimen/dp_151"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_my_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_hot_simple"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/dp_10"
            android:maxEms="5"
            android:singleLine="true"
            android:text="AAAA"
            android:textColor="#666666"
            android:textSize="@dimen/sp_12" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_my_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/home_hot_name"
                android:layout_marginTop="@dimen/dp_10"
                android:text="￥0.0"
                android:textColor="#F00"

                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/item_my_browseNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/home_hot_name"
                android:layout_marginTop="@dimen/dp_10"
                android:text="￥0.0"

                android:textSize="@dimen/sp_14" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <TextView
                android:id="@+id/item_my_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/home_hot_name"
                android:layout_marginTop="@dimen/dp_10"
                android:text="￥0.0"

                android:textSize="@dimen/sp_14" />
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>
